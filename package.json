{
  "name": "hyperterm-safepaste",
  "version": "3.0.3",
  "description": "Makes pasting into hyperterm safe",
  "keywords": [
    "hyperterm",
    "paste",
    "safepaste"
  ],
  "homepage": "https://github.com/trystan2k/hyperterm-safepaste#readme",
  "bugs": {
    "url": "https://github.com/trystan2k/hyperterm-safepaste/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trystan2k/hyperterm-safepaste"
  },
  "license": "MIT",
  "author": "Zsolt Dollenstein",
  "contributors": [
    {
      "name": "Thiago Mendonca",
      "email": "trystan2k@gmail.com"
    }
  ],
  "main": "dist/bundle.js",
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack -w",
    "build:prod": "env NODE_ENV=production webpack --mode production",
    "clear:deps": "rm -rf ./node_modules",
    "lint": "eslint . --cache",
    "prepublish": "yarn run test",
    "push": "git push && git push --tags",
    "release": "standard-version",
    "test": "yarn run typecheck && yarn run lint && yarn run jest",
    "jest": "jest",
    "jest:watch": "jest --watch",
    "typecheck": "flow check",
    "prepare": "husky install"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.+(js|json)": [
      "eslint --fix --ignore-path"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "jest": {
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.jsx?$"
  },
  "dependencies": {
    "invariant": "^2.2.4",
    "node-pty": "^0.10.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/eslint-parser": "^7.14.0",
    "@babel/preset-env": "^7.14.0",
    "@babel/preset-flow": "^7.14.5",
    "@babel/preset-react": "^7.14.0",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "babel-jest": "^27.0.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-react-transform": "^3.0.0",
    "babel-plugin-transform-class-properties": "^6.24.0",
    "eslint": "^7.29.0",
    "eslint-plugin-flowtype": "^5.7.2",
    "eslint-plugin-json": "^3.0.0",
    "eslint-plugin-react": "^7.24.0",
    "flow-bin": "^0.153.0",
    "flow-typed": "^3.3.0",
    "husky": "6",
    "jest": "^27.0.0",
    "jest-cli": "^27.0.0",
    "lint-staged": "^11.0.0",
    "sort-package-json": "^1.50.0",
    "standard-version": "^9.3.0",
    "webpack": "^5.40.0",
    "webpack-cli": "^4.7.2"
  },
  "engines": {
    "node": ">=15"
  },
  "standard-version": {
    "releaseCommitMessageFormat": "chore(*): release {{currentTag}}"
  }
}
